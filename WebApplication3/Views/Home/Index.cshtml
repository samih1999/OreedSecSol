@model IEnumerable<OrderModel>

@{
    ViewData["Title"] = "Home Page";
	Layout = "_layout";
}


<head>
	<title>Contact V1</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="~/assets/images/icons/favicon.ico" />
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/assets/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/assets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/assets/vendor/animate/animate.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/assets/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/assets/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/assets/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/assets/css/main.css">
	<link href="~/css/table.css" rel="stylesheet" />
<!--===============================================================================================-->
</head>
<body>

	<div class="contact1">
		<div class="container-contact1">
			<div class="contact1-pic js-tilt" data-tilt>
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Order Date</th>
							<th scope="col">Order Number</th>
							<th scope="col">Customer Name</th>
							<th scope="col">Location</th>
							<th scope="col">Order Type</th>
						</tr>
					</thead>
					<tbody>
					
						@foreach (var order in Model)
						{
							<tr>

								<td>@order.OrderDate</td>
								<td>@order.OrderNumber</td>
								<td>@order.Customer.CustomerName</td>
								<td>@order.Customer.Location</td>
								<td>@Enum.GetName(typeof(WebApplication3.Models.Type),order.OrderType)</td>


							</tr>
						}
					</tbody>
				</table>
			</div>

			<form asp-action="Index" asp-controller="Home" method="post" class="contact1-form validate-form">
				<span class="contact1-form-title">
					Order Page
				</span>

				<div class="wrap-input1 validate-input">
					<label>
						Order Type :
					</label><br>
					<input type="radio" id="Spec" value="Special" name="type" checked> Special
					<input type="radio" id="nor" value="Normal" name="type" > Normal
					<span class="shadow-input1"></span>
					<br />
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
					<input class="input1" type="text" name="CustomerName" placeholder="Customer Name" required>
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Location is required">
					<input class="input1" type="text" name="Location" placeholder="Location">
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "discount is required">
					<input class="input1" id="dis" type="number" step="0.1" name="discount" placeholder="Discount">
					<span class="shadow-input1"></span>
				</div>


				<div class="wrap-input1 validate-input" data-validate="Date is required">
					<input class="input1" type="date" name="OrderDate" placeholder="Order Date">
					<span class="shadow-input1"></span>
				</div>
				
				<div class="wrap-input1 validate-input" data-validate="Order Number is required">
					<input class="input1" type="number" name="OrderNumber" placeholder="Order Number">
					<span class="shadow-input1"></span>
				</div>


				<div class="container-contact1-form-btn">
					<button class="contact1-form-btn">
						Send Order
					</button>
				</div>
			</form>
		</div>
	</div>




<!--===============================================================================================-->
	<script src="~/assets/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="~/assets/vendor/bootstrap/js/popper.js"></script>
	<script src="~/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="~/assets/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="~/assets/vendor/tilt/tilt.jquery.min.js"></script>

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
	<script type="text/javascript">
		$(function () {
			$("input[name='type']").click(function () {
				if ($("#Spec").is(":checked")) {
					$("#dis").removeAttr("disabled");
					$("#dis").focus();
				} else {
					$("#dis").attr("disabled", "disabled");
				}
			});
		});
	</script>
	<script type="text/javascript">
		function EnableDisableTextBox() {
			var chkYes = document.getElementById("nor");
			var txtPassportNumber = document.getElementById("dis");
			txtPassportNumber.disabled = chkYes.checked ? false : true;
			if (!txtPassportNumber.disabled) {
				txtPassportNumber.focus();
			}
		}
	</script>


	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>

